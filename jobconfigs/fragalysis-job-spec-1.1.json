{
  "global": {
    "job_dir": "fragalysis-jobs/{username}/{job_name}-{timestamp}",
    "inputs_dir": "fragalysis-inputs/{target}"
  },
  "precompilation_ignore": ["job_dir"],
  "fragalysis-jobs": [
    {
      "job_collection": "fragmenstein",
      "job_name": "fragmenstein-combine",
      "job_version": "1.0.0",
      "inputs": {
        "fragments": {
          "type": "array",
          "uniqueItems": true,
          "format": "chemical/x-mdl-molfile",
          "items": {
            "from": "lhs",
            "enum": "{inputs_dir}/{target}-{item}.mol",
            "enumNames": "{item}"
          }
        },
        "protein": {
          "type": "string",
          "format": "chemical/x-pdb",
          "from": "lhs",
          "enum": "{inputs_dir}/{target}-{item}_apo-desolv.pdb",
          "enumNames": "{item}"
        }
      },
      "options": {
        "outfile": {
          "value": "{job_dir}/results_merged.sdf",
          "ui:widget": "hidden"
        },
        "count": {
          "default": 5,
          "readOnly": true
        },
        "smiles": {
          "type": "string",
          "default": "original SMILES",
          "ui:widget": "hidden"
        },
        "fragIdField": {
          "default": "_Name",
          "ui:widget": "hidden"
        }
      },
      "outputs": {
        "outputs": { "type": "string" }
      },
      "results": ["Merged molecules"]
    }
  ]
}
