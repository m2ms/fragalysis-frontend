{
  "global": {
    "job_dir": "fragalysis-jobs/{username}/{job_name}-{timestamp}"
  },
  "fragalysis-jobs": [
    {
      "job_collection": "fragmenstein",
      "job_name": "fragmenstein-combine",
      "job_version": "1.0.0",
      "inputs": {
        "fragments": {
          "from": "lhs-fragments",
          "type": "array",
          "uniqueItems": true,
          "format": "chemical/x-mdl-molfile",
          "as": "{job_dir}/{file_name}"
        },
        "protein": {
          "from": "lhs-protein-apo-desolv",
          "type": "string",
          "format": "chemical/x-pdb",
          "as": "{job_dir}/{file_name}"
        }
      },
      "options": {
        "outfile": {
          "value": "{job_dir}/merged.sdf",
          "ui:widget": "hidden"
        },
        "count": {
          "default": 5,
          "readOnly": true
        },
        "smiles": {
          "type": "string",
          "default": "original SMILES",
          "ui:widget": "hidden"
        },
        "fragIdField": {
          "default": "_Name",
          "ui:widget": "hidden"
        }
      },
      "outputs": {
        "outputs": { "type": "string" }
      },
      "results": ["Merged molecules"]
    }
  ]
}
